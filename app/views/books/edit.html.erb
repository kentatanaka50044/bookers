<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
<table>
  <thead>
  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Body</p>
  <%= f.text_area :body %>
 </thead>
   
    <td><%= f.submit 'Update Book' %></td>
  <tbody>
    <td><%= link_to 'Show', @book %></td>
    <td>|</td>
    <td><%= link_to 'Back', "/books" %></td>
  </tbody>
<% end %>
</table>